{
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        ".eslintrc.cjs",
        "jest.config.cjs",
        "webpack.config.cjs",
    ],
    "exclude": [
        "./node_modules/**/*"
    ],
    "compilerOptions": {
        "outDir": "./build",
        "esModuleInterop": false,
        "target": "ES2017",
        "module": "CommonJS",
        "lib": [
            "DOM",
            "ES7"
        ],
        "strict": true,
    }
}
